@model BookModel

<div class="card mb-4 shadow-sm">
    <img src="@Model.CoverImageUrl" class="img-thumbnail" />
    <div class="card-body">
        <h3 class="card-title">@Model.Title</h3>
        <p class="card-text">@Model.Description</p>
        <div class="d-flex justify-content-between align-items-center">
            <div class="btn-group">
                <a asp-controller="Book" asp-action="GetBook" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">View details</a>
            </div>
            <small class="text-muted">@Model.Author</small>
        </div>
    </div>
</div>