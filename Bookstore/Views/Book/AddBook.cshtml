@using Bookstore.Enums
@{
    ViewData["Title"] = "AddBook";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model BookModel

    <div class="container">
        <h3 class="display-4 font-weight-bold">Add new Book</h3>
        <hr />
        @if (ViewBag.isSuccess == true)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Congratulation!</strong> You should succesfully add a ne book. <br />
                Click <a asp-action="GetBook" asp-route-id="@ViewBag.BookId" asp-controller="Book">Here</a> to view the details.
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status" id="myloader" style="display:none">
                <span class="sr-only">Loading...</span>
            </div>
        </div>

        @*<div asp-validation-summary="All" class="text-danger"></div>*@
        <div class="card">
            <div class="card-body">
                <form method="post" enctype="multipart/form-data" data-ajax="true" data-ajax-loading="#myloader" asp-action="AddBook" asp-controller="Book">

                    <!--<div class="form-group row">
    <label asp-for="MyField" class="col-sm-2 col-form-label"></label>
    <input asp-for="MyField" class="form-control col-sm-5" />-->
                    @*<span asp-validation-for="Title" class="text-danger"></span>*@
                    <!--</div>-->
                    <div class="form-group row">
                        <label asp-for="Title" class="col-sm-2 col-form-label"></label>
                        <input asp-for="Title" class="form-control col-sm-5" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Author" class="col-sm-2 col-form-label"></label>
                        <input asp-for="Author" class="form-control col-sm-5" />
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                        <textarea asp-for="Description" class="form-control col-sm-5"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="CoverPhoto" class="col-sm-2 col-form-label"></label>
                        <div class="custom-file input-group col-sm-5">
                            <input asp-for="CoverPhoto" class="custom-file-input col-sm-5" id="inputGroupFile02" aria-describedby="inputGroupFileAddon02">
                            <label class="custom-file-label" for="inputGroupFile02">Choose file</label>
                        </div>
                        <span asp-validation-for="CoverPhoto" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="BookPdf" class="col-sm-2 col-form-label"></label>
                        <div class="custom-file input-group col-sm-5">
                            <input asp-for="BookPdf" class="custom-file-input col-sm-5" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                        <span asp-validation-for="BookPdf" class="text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <label asp-for="Category" class="col-sm-2 col-form-label"></label>
                        <input asp-for="Category" class="form-control col-sm-5" />
                        <span asp-validation-for="Category" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="TotalPages" class="col-sm-2 col-form-label"></label>
                        <input asp-for="TotalPages" class="form-control col-sm-5" />
                        <span asp-validation-for="TotalPages" class="text-danger"></span>
                    </div>
                    <div class="form-group row">
                        <label asp-for="Language" class="col-sm-2 col-form-label"></label>
                        <select asp-for="Language" class="form-control col-sm-5">
                            <option value="">Please select language</option>
                            <option value="English">English Worldwide</option>
                            <option value="Hindi">Hindi , India</option>
                            <option value="Spanish">Spanish, Spain</option>
                            <option value="Urdu">Urdu, Islamic </option>
                        </select>
                        <span asp-validation-for="Language" class="text-danger"></span>
                    </div>
                    <!--<div class="form-group row">
    <label asp-for="MultiLang" class="col-sm-2 col-form-label"></label>
    <select asp-for="MultiLang" class="form-control col-sm-5" asp-items="Html.GetEnumSelectList<LanguageEnum>()">
    </select>-->
                    @*<span asp-validation-for="Language" class="text-danger"></span>*@
                    <!--</div>-->
                    <div class="form-group row">
                        <input type="submit" value="Add Book" class="btn btn-primary col-sm-3" />
                    </div>
                </form>
            </div>
        </div>
    </div>


